{
    "compilerOptions": {
        "target": "ES2022", // Or the latest version supported by your target audience
        "module": "ESNext", // Or "" if you want to use ES modules directly
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}